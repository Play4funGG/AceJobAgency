@page
@model AceJobAgency.Pages.EnableAuthenticatorModel
@{
    ViewData["Title"] = "Enable Authenticator";
}

<h2>Enable Authenticator</h2>

<p>To use an authenticator app, scan the QR code below or enter the key manually:</p>

<div>
    <img src="@Model.QrCodeUrl" alt="QR Code" />
    <p>Manual Key: @Model.SharedKey</p>
</div>

<form method="post">
    <div>
        <label asp-for="Input.Code"></label>
        <input asp-for="Input.Code" />
        <span asp-validation-for="Input.Code" class="text-danger"></span>
    </div>
    <button type="submit">Verify</button>
</form>